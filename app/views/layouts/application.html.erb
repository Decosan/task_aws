<!DOCTYPE html>
<html>
  <head>
    <title>Manyou</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div id='wrapper'>
      <nav class="navbar navbar-default">
        <div class="container-fluid">
          <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbarEexample1">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="/tasks">Go Tasks</a>
          </div>
          
          <div class="collapse navbar-collapse" id="navbarEexample1">
            <ul class="nav navbar-nav">
              <% if logged_in? %>
                <li style="font-weight: bold; color: blue; padding: 15px;">Login User: <%= current_user.name %></li>
                <li><%= link_to 'User Info', user_path(current_user) %></li>
                <li><%= link_to "Groups", groups_path %></li>
                <li><%= link_to 'Logout', session_path(current_user),method: :delete, data: {confirm:'Are you sure?'} %></li>
              <% else %>
                <li><%= link_to "Sign up", new_user_path %></li>
                <li><%= link_to "Login", new_session_path %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>

      <div class='container'>
        <%= render 'layouts/flash_messages' %>
        <%= yield %>
      </div>

      <footer>
        <p>&copy;Junichiro Suzuki</p>
      </footer>
    </div>  
  </body>
</html>
